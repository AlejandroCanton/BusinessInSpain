<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="aar.businessinspain.MenuSpain"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#fff3c428"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:padding="20dp"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/titulos"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="España"
            android:id="@+id/textView"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#fff4fff5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:gravity="center_vertical"
            android:weightSum="1">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageViewInfo"
                android:src="@drawable/informacion"
                android:layout_weight="0.06"
                android:layout_gravity="top|center_horizontal"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Información General"
                android:id="@+id/textView6"
                android:layout_weight="0.06"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="50dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageViewProtocolo"
                android:src="@drawable/protocolo"
                android:layout_weight="0.06"
                android:layout_gravity="center_horizontal"
                android:onClick="advanceToProtocolo"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Protocolo de Negocios"
                android:id="@+id/textView7"
                android:layout_weight="0.06"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:gravity="center_vertical"
            android:weightSum="1"
            >


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageViewPartir"
                android:src="@drawable/antes"
                android:layout_weight="0.06"
                android:layout_gravity="top|center_horizontal"
                android:onClick="advanceToInfo"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Antes de Partir"
                android:id="@+id/textView8"
                android:layout_weight="0.06"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="50dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageViewEmergencias"
                android:src="@drawable/emergencias"
                android:layout_weight="0.06"
                android:layout_gravity="center_horizontal"
                android:onClick="advanceToEmergencias"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Emergencias"
                android:id="@+id/textView9"
                android:layout_weight="0.06"
                android:gravity="center"
                android:layout_gravity="center_horizontal"

                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>